<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <TextView
            android:background="#ffffff"
            android:id="@+id/permissionIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="LJ"
            android:textColor="?android:attr/colorBackground"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/permissionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LAM JUN RONG"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/permissionEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="h1710074@nushigh.edu.sg"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/permissionOwner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Owner"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/permissionsOther"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_baseline_edit_24" />
    </LinearLayout>

</LinearLayout>
