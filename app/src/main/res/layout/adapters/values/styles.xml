<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ErrorDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleIconStyle">@style/IconError</item>
    </style>

    <style name="SuccessDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleIconStyle">@style/IconSuccess</item>
    </style>

    <style name="IconSuccess" parent="MaterialAlertDialog.MaterialComponents.Title.Icon.CenterStacked">
        <item name="android:tint">@color/successGreen</item>
    </style>

    <style name="IconError" parent="MaterialAlertDialog.MaterialComponents.Title.Icon.CenterStacked">
        <item name="android:tint">@color/errorRed</item>
    </style>

</resources>
