<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:drawableStart="@drawable/ic_attendance"
            android:drawablePadding="16dp"
            android:textColor="?android:attr/textColorPrimaryNoDisable"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?attr/dividerHorizontal" />

        <TextView
            android:id="@+id/itemShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:drawableStart="@drawable/ic_baseline_person_add_24"
            android:drawablePadding="16dp"
            android:drawableTint="?android:attr/textColorPrimaryNoDisable"
            android:text="Share"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="60dp"
            android:background="?attr/dividerHorizontal" />

        <TextView
            android:id="@+id/itemA2hs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:drawableStart="@drawable/ic_baseline_a2hs"
            android:drawablePadding="16dp"
            android:drawableTint="?android:attr/textColorPrimaryNoDisable"
            android:text="Add to Home screen"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/itemDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:drawableStart="@drawable/ic_baseline_info_24"
            android:drawablePadding="16dp"
            android:drawableTint="?android:attr/textColorPrimaryNoDisable"
            android:text="Details"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/itemRename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:drawableStart="@drawable/ic_rename"
            android:drawablePadding="16dp"
            android:drawableTint="?android:attr/textColorPrimaryNoDisable"
            android:text="Rename"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/itemRemove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:drawableStart="@drawable/ic_baseline_delete_24"
            android:drawablePadding="16dp"
            android:drawableTint="?android:attr/textColorPrimaryNoDisable"
            android:text="Remove"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
